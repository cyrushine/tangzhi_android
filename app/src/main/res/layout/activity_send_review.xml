<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.sendreview.SendReviewActivity">

    <com.ifanr.tangzhi.ui.widgets.SimpleToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.ifanr.tangzhi.ui.base.widget.AppScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.ifanr.tangzhi.ui.sendreview.widget.TextRatingBar
                android:id="@+id/textRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="26dp"
                />
            <EditText
                android:id="@+id/commentEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/base_12"
                android:textColorHint="@color/base_a8"
                app:layout_constraintTop_toBottomOf="@id/textRatingBar"
                android:layout_marginTop="40dp"
                android:minLines="8"
                android:background="@drawable/send_review_comment_bg"
                android:gravity="start|top"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="20dp"
                >
                <requestFocus />
            </EditText>

            <com.ifanr.tangzhi.ui.sendreview.widget.UploadImageTable
                android:id="@+id/images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/commentEt"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="50dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.ifanr.tangzhi.ui.base.widget.AppScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>