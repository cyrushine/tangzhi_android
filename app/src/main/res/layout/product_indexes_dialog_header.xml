<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ifanr.android.tangzhi.ui.product.indexes.IndexesBox
        android:id="@+id/score"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#F13B03"
        android:text="@string/proodict_indexes_dialog_title"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/ruleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#A8A8A8"
        android:textSize="9sp"
        android:text="@string/proodict_indexes_dialog_rule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/score"
        android:layout_marginEnd="10dp"
        />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#121212"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/score"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/titleTv"
        app:layout_constraintBottom_toTopOf="@id/ruleTv"
        android:gravity="top|start"
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.1"
         />
</androidx.constraintlayout.widget.ConstraintLayout>