<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="20dp"
        android:textSize="12sp"
        android:gravity="center_vertical"
        />

    <EditText
        android:id="@+id/formInputEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/base_12"
        android:textSize="15sp"
        android:textColorHint="@color/base_de"
        android:hint="@string/sign_in_by_phone_sms_code_hint"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/operation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:inputType="number"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/base_e9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</merge>