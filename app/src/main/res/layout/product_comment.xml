<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="23dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.ifanr.tangzhi.ui.widgets.EditorChoiceImageView
        android:id="@+id/editorChoiceIv"
        android:layout_width="74dp"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/base_3a"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toRightOf="@id/editorChoiceIv"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.ifanr.tangzhi.ui.widgets.RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/nameTv"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_marginBottom="2dp"
        app:ratingBarStarSize="10dp"
        app:ratingBarStarGap="3dp"
        />

    <com.ifanr.tangzhi.ui.widgets.DateTextView
        android:id="@+id/dateTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ratingbar"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@id/editorChoiceIv"
        android:layout_marginEnd="8dp"
        app:layout_goneMarginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/base_12"
        android:lineSpacingMultiplier="1.1"
        android:breakStrategy="simple"
        android:maxLines="5"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        android:layout_marginTop="16dp"
        />

    <com.ifanr.tangzhi.ui.product.comments.review.widget.ImageTable
        android:id="@+id/imageTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contentTv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        />

    <com.ifanr.tangzhi.ui.widgets.ReplyView
        android:id="@+id/reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="19dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageTable"
        app:layout_constraintLeft_toLeftOf="@id/avatar"
        />

    <com.ifanr.tangzhi.ui.widgets.UpView
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="20dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageTable"
        app:layout_constraintLeft_toRightOf="@id/reply"
        />

    <com.ifanr.tangzhi.ui.icons.IcMoreBtn
        android:id="@+id/optionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/imageTable"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="19dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/base_e7"
        app:layout_constraintTop_toBottomOf="@id/reply"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>