<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonBarPositiveButtonStyle">@style/AppButtonBarPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppButtonBarNegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AppButtonBarNeutralButtonStyle</item>
    </style>

    <!-- app alert dialog style -->
    <style name="AppButtonBarPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/base_red</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/base_88</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="AppButtonBarNeutralButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/base_88</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <!-- app alert dialog style -->

    <style name="AppTheme.GalleryActivity">
        <item name="android:windowAnimationStyle">@style/AppAnimation.GalleryActivity</item>
    </style>

    <style name="AppTheme.ShareActivity">
        <item name="android:windowAnimationStyle">@style/AppAnimation.ShareActivity</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppAnimation" parent="@android:style/Animation" />
    <style name="AppAnimation.GalleryActivity">
        <item name="android:activityOpenEnterAnimation">@anim/gallery_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/gallery_activity_exit</item>
    </style>

    <style name="AppAnimation.ShareActivity">
        <item name="android:activityOpenEnterAnimation">@anim/no_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/no_animation</item>
    </style>

    <style name="AppTextAppearance" />
    <style name="AppTextAppearance.ProductTagCount">
        <item name="android:textColor">@color/base_a8</item>
        <item name="android:textSize">7dp</item>
    </style>

    <style name="AppTextAppearance.ProductTagCount.Voted">
        <item name="android:textColor">@color/base_red</item>
        <item name="android:textSize">7dp</item>
    </style>

    <style name="AppTextAppearance.HomeProductReview">
        <item name="android:textColor">@color/base_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Matisse.TangZhi" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/base_12</item>
        <item name="colorPrimaryDark">@color/base_12</item>
        <item name="toolbar">@style/Matisse.TangZhi.Toolbar</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/base_12</item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/base_12</item>
        <item name="bottomToolbar.preview.textColor">@color/white</item>
        <item name="bottomToolbar.apply.textColor">@color/white</item>
        <item name="preview.bottomToolbar.back.textColor">@color/white</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/white</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>

    <style name="Matisse.TangZhi.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="CommentChildReplay">
        <item name="android:textColor">@color/base_a8</item>
    </style>

    <style name="ProfileItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/base_e8</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="UpdateProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="UpdateProfileKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_23</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>
    <style name="UpdateProfileValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/base_7d</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="UpdateProfileDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/base_e8</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
</resources>
