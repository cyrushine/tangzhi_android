<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.GalleryActivity">
        <item name="android:windowAnimationStyle">@style/AppAnimation.GalleryActivity</item>
    </style>

    <style name="AppTheme.ShareActivity">
        <item name="android:windowAnimationStyle">@style/AppAnimation.ShareActivity</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppAnimation" parent="@android:style/Animation" />
    <style name="AppAnimation.GalleryActivity">
        <item name="android:activityOpenEnterAnimation">@anim/gallery_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/gallery_activity_exit</item>
    </style>

    <style name="AppAnimation.ShareActivity">
        <item name="android:activityOpenEnterAnimation">@anim/no_animation</item>
        <item name="android:activityOpenExitAnimation">@anim/no_animation</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_animation</item>
        <item name="android:activityCloseExitAnimation">@anim/no_animation</item>
    </style>

    <style name="AppTextAppearance" />
    <style name="AppTextAppearance.ProductTagCount">
        <item name="android:textColor">@color/base_a8</item>
        <item name="android:textSize">7dp</item>
    </style>

    <style name="AppTextAppearance.ProductTagCount.Voted">
        <item name="android:textColor">@color/base_red</item>
        <item name="android:textSize">7dp</item>
    </style>

    <style name="AppTextAppearance.HomeProductReview">
        <item name="android:textColor">@color/base_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Matisse.TangZhi" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/base_12</item>
        <item name="colorPrimaryDark">@color/base_12</item>
        <item name="toolbar">@style/Matisse.TangZhi.Toolbar</item>
        <item name="album.dropdown.title.color">@color/zhihu_album_dropdown_title_text</item>
        <item name="album.dropdown.count.color">@color/zhihu_album_dropdown_count_text</item>
        <item name="album.element.color">@android:color/white</item>
        <item name="album.thumbnail.placeholder">@color/zhihu_album_dropdown_thumbnail_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.textColor">@color/zhihu_album_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="item.checkCircle.backgroundColor">@color/base_12</item>
        <item name="item.checkCircle.borderColor">@color/zhihu_item_checkCircle_borderColor</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/base_12</item>
        <item name="bottomToolbar.preview.textColor">@color/white</item>
        <item name="bottomToolbar.apply.textColor">@color/white</item>
        <item name="preview.bottomToolbar.back.textColor">@color/white</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/white</item>
        <item name="listPopupWindowStyle">@style/Popup.Zhihu</item>
        <item name="capture.textColor">@color/zhihu_capture</item>
    </style>

    <style name="Matisse.TangZhi.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="CommentChildReplay">
        <item name="android:textColor">@color/base_a8</item>
    </style>
</resources>
